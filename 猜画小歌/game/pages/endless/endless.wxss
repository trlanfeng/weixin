#endcardButtons {
    transition: background-position 0.5s ease-out;
    background-size: 100% 100px;
    background-repeat: no-repeat;
    background-position: 0 120px;
    padding: 20px 0;
    position: fixed;
    bottom: 0;
    width: 100%;
}

#endcardButtons.underwater {
    background-image: url('http://www.gstatic.com/qilin/drawtogether/gameresult-bottombar-underwater.png');
}

#endcardButtons.land {
    background-image: url('http://www.gstatic.com/qilin/drawtogether/gameresult-bottombar-land.png');
}

#endcardButtons.to-outerspace {
    background-image: url('http://www.gstatic.com/qilin/drawtogether/gameresult-bottombar-to-outerspace.png');
}

#endcardButtons.outerspace {
    background-image: url('http://www.gstatic.com/qilin/drawtogether/gameresult-bottombar-outerspace.png');
}

.end-card-container {
    background-color: white;
}

.header-shadow {
    width: 120%;
    height: 10px;
}

.card-container.underwater .header-shadow {
    opacity: 0;
}

.topbar {
    height: 30px;
    margin-top: 10px;
}

.word-container {
    text-align: center;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    transition: all 0.5s ease-in-out;
}

.word-container text {
    display: block;
    margin-top: 5px;
}

.new-record {
    width: 50px;
    height: 20px;
    position: absolute;
    top: 110px;
    left: 68%;
}

#tutorial-card .card-row {
    margin-top: 60%;
}

.tutorial-title {
    font-weight: 700;
    font-size: 15px;
    margin: 3px;
}

.tutorial-suffix {
    position: relative;
    top: 90px;
}

.digitImage {
    position: relative;
    transform: scale(0.85,0.85);
}

.digitImage .bubble-container {
    position: relative;
    margin: auto;
    width: 60%;
    height: 40%;
    z-index: 0;
}

.digitImage .bubble-title {
    top: 42px;
}

.digitImage .bubble-suffix {
    top: -53px;
}

.digitImage .bubble-container image {
    top: -40px;
}

canvas {
    border: 1px solid #D8D8D8;
    background-color: white;
    border-radius: 24px 24px 0px 0px;
    margin-top: 20px;
    box-shadow: 0 -1px 12px 0 rgba(0,0,0,0.24);
    transition: all 0.5s ease-in-out;
}

#button-clear {
    position: absolute;
    bottom: -5px;
    transition: all 0.3s cubic-bezier(0,.72,.31,1.3);
}

#clock.topRight {
    position: absolute;
    bottom: 16px;
    right: -50px;
    font-family: 'Roboto Mono',monospace;
    text-align: center;
    transition: all 0.3s cubic-bezier(0,.72,.31,1.3);
}

#theme-trans-card {
    z-index: unset;
    left: 0;
    top: 100%;
    background-size: cover;
    background-position: unset;
    transition: unset;
}

#theme-trans-card.transitioning {
    transition: top 1s ease-in-out;
    top: 0;
}

#theme-trans-card.underwater {
    background-color: #FFF;
    background-image: url('https://www.gstatic.com/qilin/drawtogether/Gameplay-04.png');
}

#theme-trans-card.land {
    background-color: #FBBC04;
    background-image: url('https://www.gstatic.com/qilin/drawtogether/level-background-land.png');
}

#theme-trans-card.to-outerspace {
    background-color: #34A853;
    background-image: url('https://www.gstatic.com/qilin/drawtogether/level-background-to-outerspace.png');
}

#theme-trans-card.outerspace {
    background-color: #185ABC;
    background-image: url('https://www.gstatic.com/qilin/drawtogether/level-background-outerspace.png');
}

canvas {
    top: 1000px;
}

.word-container {
    padding-top: 50%;
}

.word-container #level-text {
    font-size: 0px;
}

.word-container #word-text {
    font-size: 0px;
}

.word-container text {
    transition: all 0.5s ease-in-out;
}

#button-clear {
    left: -50px;
}

.center-text .word-container {
    padding-top: 50%;
}

.center-text .word-container #level-text {
    font-size: 20px;
    margin-bottom: 5px;
}

.center-text .word-container #word-text {
    font-size: 40px;
}

.center-text .word-container text {
    transition: all 0.3s cubic-bezier(.21,.63,.2,1.25);
}

.center-text #button-clear,.on-screen #button-clear {
    left: 10px;
}

.center-text #clock.topRight,.on-screen #clock.topRight {
    right: 20px;
}

.on-screen canvas {
    top: 0px;
}

.on-screen .word-container {
    padding-top: 0%;
}

.on-screen .word-container #level-text {
    font-size: 14px;
}

.on-screen .word-container #word-text {
    font-size: 20px;
}

.on-screen .word-container text {
    transition: all 0.5s cubic-bezier(.21,.63,.2,1.25);
}

.visible .bg {
    width: 100vw;
    height: 300px;
    z-index: -2000;
    position: fixed;
    top: 0;
    left: 0;
}

.visible .bg-bottom {
    background-color: white;
    width: 100vw;
    height: 300px;
    z-index: -2000;
    position: fixed;
    bottom: 0;
    left: 0;
}