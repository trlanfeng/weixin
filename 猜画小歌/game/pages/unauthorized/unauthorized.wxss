page {
    background-image: url("https://www.gstatic.com/qilin/drawtogether/Home-bg-with-appname.png");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center -20px;
}

.feedbackLink {
    color: blue;
    text-decoration: underline;
    font-size: 14px;
}

.version {
    font-size: 14px;
}

.footer {
    text-align: center;
    position: absolute;
    bottom: 10px;
    width: 100%;
}

@media screen and (max-height:568px) {
    .hero {
        height: 100px;
    }
}

@media screen and (min-height:568px) and (max-height:640px) {
    .hero {
        height: 180px;
    }
}

@media screen and (min-height:640px) {
    .hero {
        height: 230px;
    }
}

#splashNickName {
    font-size: 16px;
    font-weight: 700;
}

#splashLevel {
    font-size: 12px;
    margin-bottom: 20px;
}

#splashProfile {
    margin-bottom: 25px;
}