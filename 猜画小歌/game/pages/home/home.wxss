page {
    background-image: url("https://www.gstatic.com/qilin/drawtogether/Home-bg-with-appname.png");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center -20px;
}

.container.root {
    margin-top: -20px;
}

.feedbackLink {
    color: blue;
    text-decoration: underline;
    font-size: 14px;
}

.version {
    font-size: 14px;
}

.footer {
    text-align: center;
    position: absolute;
    bottom: 10px;
    width: 100%;
}

@media screen and (max-height:568px) {
    .hero {
        height: 100px;
    }
}

@media screen and (min-height:568px) and (max-height:640px) {
    .hero {
        height: 180px;
    }
}

@media screen and (min-height:640px) {
    .hero {
        height: 230px;
    }
}

#splashNickName {
    font-size: 16px;
    font-weight: 700;
}

#splashLevel {
    font-size: 12px;
    margin-bottom: 20px;
}

#splashProfile {
    margin-bottom: 25px;
}

.avatar,#splashNickName,#splashLevel {
    transition: transform 0.3s cubic-bezier(.07,.67,.53,1.16);
    transition: transform 0.3s cubic-bezier(.07,.67,.53,1.16),-webkit-transform 0.3s cubic-bezier(.07,.67,.53,1.16);
    transform: scale(0,0);
}

.on-screen .avatar,.on-screen #splashNickName,.on-screen #splashLevel {
    transform: scale(1,1);
}

button {
    left: 300px;
    transition: left 0.3s cubic-bezier(.07,.67,.53,1.16);
}

.on-screen button {
    left: 0px;
}

.button2 {
    transition-delay: 0.05s;
}

.button3 {
    transition-delay: 0.10s;
}

.button4 {
    transition-delay: 0.18s;
}

.env-string {
    font-size: 14px;
    color: gray;
}